<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hoodherosg.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_Reports"
        android:name="com.example.hoodherosg.ui.Reports.ReportsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_reports" />

    <fragment
        android:id="@+id/navigation_events"
        android:name="com.example.hoodherosg.ui.Events.EventsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.hoodherosg.ui.notifications.NotificationsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_accounts"
        android:name="com.example.hoodherosg.ui.Accounts.AccountFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_account" />
</navigation>